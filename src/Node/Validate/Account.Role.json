{
    "Account": {
        "Role": {
            "create": {
                "validate": {
                    "uuid": [
                        {
                            "is.uuid": true
                        }
                    ],
                    "name": [
                        {
                            "is.unique": {
                                "class": "Account.Permission",
                                "attribute": [
                                    "name"
                                ]
                            }
                        }
                    ],
                    "rank": [
                        {
                            "integer": ">=1"
                        }
                    ]
                }
            },
            "put": {
                "validate": {
                    "uuid": [
                        {
                            "is.uuid": true
                        }
                    ],
                    "name": [
                        {
                            "is.unique": {
                                "class": "Account.Permission",
                                "attribute": [
                                    "name"
                                ]
                            }
                        }
                    ],
                    "rank": [
                        {
                            "integer": ">=1"
                        }
                    ],
                    "?permission": [
                        {
                            "in.array.uuid": true
                        }
                    ]
                }
            },
            "patch": {
                "validate": {
                    "uuid": [
                        {
                            "is.uuid": true
                        }
                    ],
                    "?name": [
                        {
                            "is.unique": {
                                "class": "Account.Permission",
                                "attribute": [
                                    "name"
                                ]
                            }
                        }
                    ],
                    "?rank": [
                        {
                            "integer": ">=1"
                        }
                    ],
                    "?permission": [
                        {
                            "in.array.uuid": true
                        }
                    ]
                }
            }
        }
    }
}